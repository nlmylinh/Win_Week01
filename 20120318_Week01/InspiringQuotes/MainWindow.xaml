<Window x:Class="InspiringQuotes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InspiringQuotes"
        mc:Ignorable="d"
        Title="InspiringQuotes" Height="700" Width="700">
    <Canvas>
        <Label Name="quoteLabel" Canvas.Left="106" Canvas.Top="534" FontSize="16" FontStyle="Oblique" Foreground="DarkMagenta"  Width="488" Height="59" 
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center" >
            <TextBlock Name ="quoteText" TextWrapping="WrapWithOverflow">
                 <Run> Tough times don’t last. Tough people do.</Run> <LineBreak/> <Run> &#x2003;&#x2003;&#x2003;– Robert H. Schuller </Run>
            </TextBlock>
        </Label>

        <Image Name="quoteImage" Width="464" Height="465" Source="/Images/quote01.jpg" Canvas.Left="118" Canvas.Top="45" />

        <Button x:Name="quoteButton" Width="100" Height="40" Canvas.Left="300" Canvas.Top="614" Content="Change" FontSize="16" Click="quoteButton_Click" 
                Background="BurlyWood"/>

    </Canvas>
</Window>
